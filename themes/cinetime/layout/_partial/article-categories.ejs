<% if (item.categories && item.categories.length){ %>
<%
    var categories = [];
    item.categories.forEach(function(category){
        categories.push('<a href="' + config.root + category.path + '">' + __('menu.' + category.name) + '</a>');
    });
%>
<div>
    <span class="fa fa-folder-open-o"></span>
    <%- categories.join(' / ') %>
</div>
<% } %>
