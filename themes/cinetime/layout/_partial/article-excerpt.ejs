<%
  var tags = [];
  item.tags.forEach(function(tag){
      tags.push(tag.name);
  });
  img_path = item.poster_path ? item.poster_path : url_for("img/") + 'cover_' + item.img_name ;
%>



<% if (is_home()) { %>

      <div class="card">
        <a href="<%- url_for(item.path) %>"><img width="302" height="181" class="card-img-top" data-src="<%- url_for('img/')%>card_<%- item.img_name %>" alt="<%- item.title + ', ' + site.data.metadata.alt_intro %>"></a>
        <div class="card-body">
          <h4 class="card-title"><%- item.title %></h4>
          <h6 class="card-subtitle text-muted"><%- _.startCase(item.author) %></h6>
        </div>
      </div>

<% } %>

<% if (is_category()) { %>
  <% if (tags.includes(tag)) { %>
    <div class="card">
      <a href="<%- url_for(item.path) %>"><img width="302" height="181" class="card-img-top" data-src="<%- url_for('img/')%>card_<%- item.img_name %>" alt="<%- item.title + ', ' + site.data.metadata.alt_intro %>"></a>
      <div class="card-body">
        <h4 class="card-title"><%- item.title %></h4>
        <h6 class="card-subtitle text-muted"><%- _.startCase(item.author) %></h6>
      </div>
    </div>
    <div class="poster-wrapper">
      <a href="<%- url_for(item.path) %>">
        <div style="background-image: url('<%- img_path %>');" class="poster-image">
          
        </div>
        
        <div class="poster-title text-dark"> <%- item.title %> </div>
      </a>
    </div>
  <% } %>
<% } %>

<% if (is_tag()) { %>
  <div class="card">
    <a href="<%- url_for(item.path) %>"><img width="302" height="181" class="card-img-top" data-src="<%- url_for('img/')%>card_<%- item.img_name %>" alt="<%- item.title + ', ' + site.data.metadata.alt_intro %>"></a>
    <div class="card-body">
      <h4 class="card-title"><%- item.title %></h4>
      <h6 class="card-subtitle text-muted"><%- _.startCase(item.author) %></h6>
    </div>
  </div>
<% } %>
