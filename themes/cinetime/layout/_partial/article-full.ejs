<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 col-xs-12" id="video_et_description">
					<div class="videoDescription">
				        <h1 class="py-2"><%- item.title %></h1>
				    </div>

					<div class="video">
						<video id="my-video" class="video-js vjs-16-9" controls preload="auto" width="640px" height="267px"
				              poster="<%- url_for('img/')%><%- item.img_name %>" data-setup='{ "techOrder": ["youtube"], "sources": [{ "type": "video/youtube", "src": "<%- item.youtube_url %>"}] }'>

						</video>
						<script src="<%- url_for('bower_components/video.js/dist/video.min.js') %>"></script>
						<script src="<%- url_for('bower_components/videojs-youtube/dist/Youtube.min.js') %>"></script>
					</div>

				    <div class="videoDescription">
				        <%- item.content %>
				    </div>


				    <div id="rs">
				      <button class="button share_twitter" data-url="<%- config.root %><%- item.path %>">
				        <span class="fa fa-twitter" aria-hidden="true"></span> Partager
				      </button>

				      <button class="button share_facebook" data-url="<%- config.root %><%- item.path %>">
				        <span class="fa fa-facebook" aria-hidden="true"></span> Partager
				      </button>

				    </div>

					 <!-- Tags and Categories links -->
				<!--      partial('article-tags', {item: item}) -->
				<!--     <%- partial('article-categories', {item: item}) %>-->

				<script src="<%- url_for('js/social.js') %>"></script>
		</div>

		<div class="col-md-4 col-xs-12">
				<div class="d-flex flex-column">
					<!-- <div class="media">
					<img class="mr-3" src="/img/lagreve.jpg" alt="Generic placeholder image">
							<div class="media-body">
									<h6 class="mt-0">Media heading</h6>
							</div>
					</div> -->
					<div class="row">
						<h5 class="m-4">Ã€ suivre</h5>
					</div>

								<% site.posts.forEach(function(potentialPost) { %>
										<!-- Iterate over potential related post tags -->
										<% potentialPost.tags.forEach(function(potentialTag) { %>
											<!-- Iterate over actual item tags -->
											<% item.tags.forEach(function(tag) { %>
													<% if ((tag.name == potentialTag.name) && (potentialPost.title != item.title)) { %>
														<ul class="list-unstyled">
															<li class="media">
																<a href="<%- url_for(potentialPost.path) %>">
																	<img class="mr-3" style="width:;height:;" width="168" src="<%- url_for('img/')%><%- potentialPost.img_name %>" alt="<%- potentialPost.title + ', ' + site.data.metadata.alt_intro %>">
																</a>
																<div class="media-body">
																	<a href="<%- url_for(potentialPost.path) %>" class="underline-not">
																	<h5 class="mt-0 mb-1"><%- potentialPost.title %></h5>
																	<p><%- _.startCase(potentialPost.author) %></p>
																  </a>
																</div>
															</li>
														</ul>
													<% } %>
										  <% }); %>
										<% }); %>
								<% }); %>

				</div>
		</div>
	</div>
</div>
