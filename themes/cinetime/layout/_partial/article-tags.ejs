<% if (item.tags && item.tags.length){ %>
<%
    var tags = [];
    item.tags.forEach(function(tag){
        tags.push('<a href="' + url_for_lang(tag.path) + '">' + tag.name + '</a>');
    });
%>
<div class="blog-tags-container">
    <span class="fa fa-tags"></span>
    <%- tags.join(' ') %>
</div>
<% } %>