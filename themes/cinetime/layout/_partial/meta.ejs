<% if(page.img_name) {%>
    <!-- Twitter Card  -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="<%- config.twitter_site %>">
    <!-- <meta name="twitter:creator" content="<%- config.twitter_creator %>"> -->
    <meta name="twitter:title" content="<%- page.title %>">
    <meta name="twitter:description" content="<%- description %>">
    <meta name="twitter:image" content="<%- config.url + url_for('img/')%>poster_<%- page.img_name %>">

    <!-- OpenGraph -->
    <meta property="og:title" content="<%- page.title %>" />
    <meta property="og:type" content="video.movie" />
    <meta property="og:url" content="<%- url %>" />
    <meta property="og:image" content="<%- config.url + url_for('img/')%>poster_<%- page.img_name %>" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1280" />
    <meta property="og:image:height" content="720" />
    <meta property="og:locale" content="<%- config.og_locale %>" />
    <meta property="og:site_name" content="<%- config.title %>" />
<% } else { %>
    <!-- Twitter Card  -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="<%- config.twitter_site %>">
    <!-- <meta name="twitter:creator" content="<%- config.twitter_creator %>"> -->
    <meta name="twitter:title" content="<%- page.title %>">
    <meta name="twitter:description" content="<%- description %>">
    <meta name="twitter:image" content="<%- config.url + url_for('img/')%>poster_<%- page.img_name %>">

    <!-- OpenGraph -->
    <meta property="og:title" content="<%- page.title || page.serp %>" />
    <meta property="og:type" content="article" />
    <meta property="article:published_time" content="<%- page.date %>" />
    <meta property="article:modified_time" content="<%- page.updated %>" />
    <meta property="article:author" content="cinetimes" />
    <meta property="og:url" content="<%- url %>" />
    <meta property="og:locale" content="<%- config.og_locale %>" />
    <meta property="og:site_name" content="<%- config.title %>" />
<% } %>