<div id="background">
	<%
	var title = '';
	if (page.category) {
      if (is_category('cartoons') || is_category('movies') || is_category('docs')) {
          title = __( 'menu.' + page.category );
          }
      else {title = titlecase(page.category)}
    }
      
	if (page.tag) title = page.tag;
	if (page.archive){
	if (page.year) title = page.year + (page.month ? '/' + page.month : '');
		else title = "Archives";
    	}  
	%>
	<% if(title) { %>
    <h2><%- title %></h2>
	<% } %>
	
	<div id="vedette">
		<% page.posts.each(function(item){ %>
				<%- partial('_partial/article-excerpt', {item: item}) %>
		<% }); %>

		<%- partial('_partial/pagination') %>
	</div>
</div>

