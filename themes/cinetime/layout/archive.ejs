<div id="background" class="no-padding-mobile">
	<%
	var title = '';

    if (page.category) title = page.category + ' gratuits en streaming';
	if (page.tag) title = page.tag;
	if (page.archive){
	if (page.year) title = page.year + (page.month ? '/' + page.month : '');
		else title = "Archives";
    	}
	%>
	<% if(title) { %>
    <h2 class="text-center archive-title"><em><%- titlecase(title) %></em></h2>
	<% } %>
<%
	var tags = [];
	var authors = [];
	page.posts.forEach(function(post){
	    if (post.tags) {
	        post.tags.forEach(function(tag)Â {
						tags.push(tag.name)
					});
	    } else if (post.author) {
	        authors.push(post.author)
	    }
	});
	tags = _.uniq(tags);
	tags.sort();

%>
  <% if (is_category()) { %>
		<div class="container-fluid category">
				<div class="row">
						<!-- <div class="col-md-3 col-xs-12 mt-2 order-2 order-sm-1">
								<nav id="navbar-main-side" class="list-group sticky-top">
									<% tags.forEach(function(tag) { %>
											<a class="list-group-item list-group-item-action" href="#<%- _.snakeCase(tag) %>"><%- tag %></a>
									<% }); %>
								</nav>
						</div> -->
<!-- <div class="hero-carousel"> -->

						<!-- 
							POPULAIRES
						-->

						
						<div class="col-md-12 col-xs-12 order-1 order-sm-2" id="background">

								<!-- Popular Posts Title-->
								<div class="d-flex flex-row justify-content-between align-items-start align-items-center category-headline">
										<h1 id="popular-posts"><strong>Populaires</strong></h1>
										
								</div>

							<!-- Popular Posts card deck-->
							<div class="row mx-md-0">
								<div class="col-12 card-deck y-scroll movie-carousel">
								<!-- Popular posts -->
								<% const maxCount = 51; %>
								<% const notag = true; %>
								<% let allPosts = build_popular_posts(env.popularPosts, site) %>
								<% allPosts = allPosts.slice(0, maxCount) %>
								<% allPosts.forEach(post => { %>
									<% if (post.category === page.category) { %>
									<%- partial('_partial/article-excerpt', {item: post, notag: true}) %>
									<% } %>
								<% }) %>
								</div>
							</div>

							<div class="advert my-3">
									<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
									<!-- Movie page -->
									<ins class="adsbygoogle"
											 style="display:block"
											 data-ad-client="ca-pub-3093835180445554"
											 data-ad-slot="1856271028"
											 data-ad-format="auto"
											 data-full-width-responsive="true"></ins>
									<script>
									(adsbygoogle = window.adsbygoogle || []).push({});
									</script>
							</div>

								<% tags.forEach(function(tag) { %>
									<div class="d-flex flex-row justify-content-between align-items-start align-items-center category-headline">
											<h1 id="<%- _.snakeCase(tag) %>"><strong><%- tag %></strong></h1>
											<a href="<%- url_for(config.tag_dir +  '/' + _.kebabCase(tag)) %>/"><button type="button" class="btn btn-outline-danger mb-md-0"><%- site.data.excerpt.Voir_plus %></button></a>
									</div>
										<div class="row pl-md-4" class="col-12 scrollspy-example" data-spy="scroll" data-target="#navbar-main-side" data-offset="40">
											<div class="col-12 card-deck y-scroll movie-carousel">
												<% page.posts.each(function(item){ %>
															<%- partial('_partial/article-excerpt', {item: item, tag: tag}) %>
												<% }); %>
											</div>
										</div>
								<% }); %>
						</div>
					</div>
		</div>
	<% } %>


		<%- partial('_partial/pagination') %>


	</div>
