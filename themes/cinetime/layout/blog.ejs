<div class="col-md-8 col-xs-12 mx-auto py-3 px-md-5 px-xs-1 mb-2 bg-color-white blog-post">
    <h1 class="text-center my-5 font-weight-bold"> 
        <%- page.title %> 
        <a href=" <%- raw_link(page.source) %> "> <span class="fa fa-pencil"></span> </a>
    </h1>
    
    <div class="mb-5">
        <%- page.content %>
        <% if (page.minning) { %>
            <%- partial('_partial/ui-miner') %>
        <% } %>
    </div>
</div>



<% if((config.disqus_shortname) && !(page.comments == false)){ %>
    <div class="col-md-8 col-xs-12 mx-auto py-3 px-5 mb-1">
            <h3 class="text-center my-2 font-weight-bold">Laisser un commentaire</h3>
    </div>

    <div class="col-md-8 col-xs-12 mx-auto py-3 px-5 mb-5 bg-color-white">
        <!-- Comments -->
        <%- partial('_partial/comments') %>
    </div>
<% } %>

